<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailKajian">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:weightSum="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="259dp"
                    android:id="@+id/gambarkajian" />
                <TextView
                    android:text="Judul Kajian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/judulKajian"
                    android:textStyle="normal|bold"
                    android:textSize="14sp" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="5dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:background="@drawable/pin_maps"
                        android:id="@+id/img_pin_maps_kajian"
                        android:layout_height="28dp" />

                    <TextView
                        android:text="Nama Masjid"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/namaMasjid"
                        android:layout_weight="1"
                        android:textStyle="normal|bold"
                        android:gravity="center|left"/>




                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="5dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:background="@drawable/contact"
                        android:id="@+id/img_tlpn_kajian"
                        android:layout_height="28dp" />
                    <TextView
                        android:text="Contact Masjid"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/contactMsjd"
                        android:layout_weight="1"
                        android:textStyle="normal|bold"
                        android:gravity="center|left"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="5dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:background="@drawable/ustadz"
                        android:id="@+id/img_ustadz_kajian"
                        android:layout_height="28dp" />

                    <TextView
                        android:text="Nama ustadz"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/namaUstadz"
                        android:layout_weight="1"
                        android:textStyle="normal|bold"
                        android:gravity="center|left"/>


                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="5dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:background="@drawable/calender"
                        android:id="@+id/img_calender_kajian"
                        android:layout_height="28dp" />

                    <TextView
                        android:text="Tanggal Kajian"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/tanggalkajian"
                        android:layout_weight="1"
                        android:textStyle="normal|bold"
                        android:gravity="center|left"/>


                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="5dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:background="@drawable/time"
                        android:id="@+id/img_waktu_kajian"
                        android:layout_height="28dp" />

                    <TextView
                        android:text="Waktu Kajian"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/waktuKajian"
                        android:layout_weight="1"
                        android:textStyle="normal|bold"
                        android:gravity="center|left"/>



                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="5dp">

                    <TextView
                        android:text="Penjelasan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView"
                        android:layout_weight="1"
                        android:textStyle="normal|bold|italic"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="5dp">


                    <TextView
                        android:text="Deskripsi Kajian"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/deskripsiKJ"
                        android:layout_weight="1"
                        android:textStyle="normal|bold"
                        android:gravity="center|left"/>

                </LinearLayout>





            </LinearLayout>


        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingTop="2dp"

        android:background="#ECEFF1">


        <Button
            android:text="Ikuti Kajian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ikutKajian"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:textColor="#ffffff" />
    </LinearLayout>

</RelativeLayout>